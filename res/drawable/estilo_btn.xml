<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Cuando se presiona -->
    <item android:state_pressed="true" >
        <shape >
            <gradient
                android:angle="270"
                android:startColor="@color/blanco"
                android:endColor="@color/grisClaro" />
            <stroke
                android:width="2dp"
                android:color="@color/blanco" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:right="10dp" />
        </shape>
    </item>

    <!-- La forma normal -->
    <item >
        <shape >
            <gradient
                android:angle="270"
                android:startColor="@color/blanco"
                android:endColor="@color/grisClaro" />
            <stroke
                android:width="2dp"
                android:color="@color/blanco" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:right="10dp" />
        </shape>
    </item>
</selector>